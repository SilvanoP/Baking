<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NavigationButtonStyle" parent="Widget.AppCompat.ButtonBar">
        <item name="@android:layout_width">@dimen/navigation_button_width</item>
        <item name="@android:layout_height">wrap_content</item>
        <item name="@android:layout_marginStart">@dimen/margin_default_value</item>
        <item name="@android:layout_marginEnd">@dimen/margin_default_value</item>
        <item name="@android:drawablePadding">@dimen/navigation_button_icon_padding</item>
        <item name="@android:paddingStart">@dimen/navigation_button_padding_start</item>
        <item name="@android:paddingEnd">@dimen/navigation_button_padding_end</item>
        <item name="@android:gravity">center</item>
        <item name="@android:text">@string/next</item>
    </style>

</resources>
