<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_top_list_value"
    android:layout_marginStart="@dimen/margin_default_value"
    android:layout_marginEnd="@dimen/margin_default_value"
    app:cardCornerRadius="@dimen/cardview_default_radius">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/recipe_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        tools:src="@drawable/image_placeholder_recipe"
        />

    <TextView
        android:id="@+id/recipe_item_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default_value"
        android:layout_gravity="bottom"
        android:textSize="@dimen/text_size_big"
        android:textColor="@android:color/black"
        tools:text="@string/tools_recipe_name_text"
        />

</android.support.v7.widget.CardView>